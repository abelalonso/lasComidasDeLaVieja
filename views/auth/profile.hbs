<div class="container">
    <h1>Hola {{user.username}}</h1>
    <div class="row">
        <div id="profile-section" class="col-md-3">
            <div id="profile-pic">
                <img src="../{{user.profilePic.path}}" alt="{{user.profilePic.originalName}}">
            </div>
            <a href="/recipes/addRecipe">Crear receta</a>
        </div>
        <div id="all-recipes" class="col-md-9">
            <h2>Todas mis recetas</h2>
            <form action="/recipes/search" method="post">
                <input type="text" name="search" placeholder="Palabra a buscar">
                <button type="submit">Buscar</button>
            </form>
            {{#each recipes}}
                <div class="recipe-small col-md-4">
                    <a href="/recipes/oneRecipe/{{this._id}}">{{> recipePartial this}}</a>
                </div>
            {{/each}} 
        </div>
    </div>
</div>