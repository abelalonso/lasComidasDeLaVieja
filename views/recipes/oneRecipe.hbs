<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div id="photo">
        <div class="recipe-big-photo">
          <img src="{{recipe.recipePic.path}}" alt="{{recipe.recipePic.originalName}}">
        </div>
      </div>
      <div id="rate"></div>
      <div id="ingredients">
        <h3>Ingredientes</h3>
        <ul>
          {{#each recipe.ingredients}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
      {{#if recipe.recipeBeers}}
      <div id="recomended-beers">
        <h3>Cervezas recomendadas con este plato</h3>
        {{#each recipe.recipeBeers}}
          {{> beerPartial this}}
        {{/each}}
      </div>    
      {{/if}}
    </div>
    <div class="col-md-8">
      <div id="recipe-name">
        <h1>{{recipe.name}} 
        <div id="author"><span>{{recipe.elaborationTime}}</span><span>-por {{recipe.authorId.username}}-</span></div></h1>
      </div>
      <div id="steps">
        <h3>Pasos a seguir</h3>
        <ol>
          {{#each recipe.steps}}
            <li>{{this}}</li>
          {{/each}}
        </ol>
      </div>
      <div id="comments">
        <h3>Comentarios</h3>
        {{#each comments}}
          {{> commentsPartial this}}
        {{/each}}
        <form action="/recipes/addComment/{{recipe._id}}" method="post">
          <textarea id="message" name="message" rows="4" placeholder="Deja tu comentario"></textarea>
          <button class="btn btn-outline-info" type="submit">Comentar</button>
        </form>
      </div>
    </div>
  </div>
</div>




