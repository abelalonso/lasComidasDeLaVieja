<div class="beer">
  <div id="img-party">
    <div class="img-beer">
      <img src="{{this.image_url}}" alt="beer image cap">
    </div>
    <div class="img-vieja">
      <img src="/images/vieja-beer.gif">
    </div>

  </div>
  <div class="beer-body">
    <h2 class="beer-title">{{this.name}}</h2>
